#!/usr/bin/env bash

VERSION="1.0.0"
SCRIPT_NAME="git-remote-branch"

show_help() {
  cat << EOF
$SCRIPT_NAME - Get the remote tracking branch for current branch

Usage: $SCRIPT_NAME [options]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Description:
  Shows the remote branch that corresponds to the current local branch.
  For example, if you're on 'feature/x', shows 'origin/feature/x'.

Examples:
  # Show remote branch
  $SCRIPT_NAME

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

current_branch=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)
if [ -z "$current_branch" ]; then
  echo "Error: Could not determine current branch" >&2
  exit 1
fi

git branch -r | grep -E "/$current_branch\$" | grep -v -e "->" | sed -e "s/ //g"
