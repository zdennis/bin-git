#!/usr/bin/env bash

VERSION="1.0.0"
SCRIPT_NAME="git-open-sha-diff"

show_help() {
  cat << EOF
$SCRIPT_NAME - Open commit diff on GitHub

Usage: $SCRIPT_NAME [options]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Description:
  Opens the GitHub diff view for a commit in your default browser.
  Requires git-sha-diff-url command.

Examples:
  # Open current commit diff
  $SCRIPT_NAME

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

url=$(git sha-diff-url 2>/dev/null)
if [ -z "$url" ]; then
  echo "Error: Could not determine diff URL" >&2
  exit 1
fi

open "$url"
