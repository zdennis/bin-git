#!/usr/bin/env bash

VERSION="1.0.0"
SCRIPT_NAME="git-sha-url"

show_help() {
  cat << EOF
$SCRIPT_NAME - Get the GitHub URL for a commit

Usage: $SCRIPT_NAME [options] [sha]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Arguments:
  sha            Commit SHA (default: current HEAD)

Description:
  Generates the GitHub URL to view a specific commit.

Examples:
  # URL for current commit
  $SCRIPT_NAME

  # URL for specific commit
  $SCRIPT_NAME abc1234

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

if [ -n "$1" ]; then
  sha="$1"
else
  sha=$(git rev-parse HEAD 2>/dev/null)
  if [ -z "$sha" ]; then
    echo "Error: Could not determine current commit" >&2
    exit 1
  fi
fi

url=$(git url 2>/dev/null)
if [ -z "$url" ]; then
  echo "Error: Could not determine repository URL" >&2
  exit 1
fi

echo "$url/commit/$sha"
