#!/usr/bin/env bash

VERSION="1.0.0"
SCRIPT_NAME="git-open-travisci"

show_help() {
  cat << EOF
$SCRIPT_NAME - Open Travis CI builds for repository

Usage: $SCRIPT_NAME [options]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Description:
  Opens the Travis CI build page for the repository in your default browser.

Examples:
  # Open Travis CI for repository
  $SCRIPT_NAME

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

repos_name=$(git repos-name 2>/dev/null)
if [ -z "$repos_name" ]; then
  echo "Error: Could not determine repository name" >&2
  exit 1
fi

open "https://travis-ci.com/github/$repos_name"
