#!/usr/bin/env bash

VERSION="1.0.0"
SCRIPT_NAME="git-new-repos"

show_help() {
  cat << EOF
$SCRIPT_NAME - Open GitHub's new repository page

Usage: $SCRIPT_NAME [options]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Description:
  Opens GitHub's 'create new repository' page in your default browser.

Examples:
  # Open new repo page
  $SCRIPT_NAME

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

open https://github.com/new
