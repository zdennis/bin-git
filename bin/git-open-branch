#!/usr/bin/env bash

VERSION="1.0.0"
SCRIPT_NAME="git-open-branch"

show_help() {
  cat << EOF
$SCRIPT_NAME - Open a branch on GitHub in browser

Usage: $SCRIPT_NAME [options] [branch]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Arguments:
  branch         Branch name (default: current branch)

Description:
  Opens the GitHub page for a branch in your default browser.

Examples:
  # Open current branch
  $SCRIPT_NAME

  # Open specific branch
  $SCRIPT_NAME feature/new-feature

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

BRANCH="$1"
url=$(git branch-url "$BRANCH" 2>/dev/null)
if [ -z "$url" ]; then
  echo "Error: Could not determine branch URL" >&2
  exit 1
fi

open "$url"
