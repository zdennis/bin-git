#!/usr/bin/env bash

VERSION="1.0.0"
SCRIPT_NAME="git-open-tree"

show_help() {
  cat << EOF
$SCRIPT_NAME - Open repository tree on GitHub

Usage: $SCRIPT_NAME [options] [ref]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Arguments:
  ref            Branch, tag, or commit (default: current branch)

Description:
  Opens the GitHub repository tree view in your default browser.

Examples:
  # Open current branch tree
  $SCRIPT_NAME

  # Open specific ref
  $SCRIPT_NAME main

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

url=$(git tree-url "$1" 2>/dev/null)
if [ -z "$url" ]; then
  echo "Error: Could not determine tree URL" >&2
  exit 1
fi

open "$url"
