#!/usr/bin/env bash

VERSION="1.0.0"
SCRIPT_NAME="git-open-sha"

show_help() {
  cat << EOF
$SCRIPT_NAME - Open a commit on GitHub

Usage: $SCRIPT_NAME [options] [sha]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Arguments:
  sha            Commit SHA (default: current HEAD)

Description:
  Opens the GitHub page for a commit in your default browser.

Examples:
  # Open current commit
  $SCRIPT_NAME

  # Open specific commit
  $SCRIPT_NAME abc1234

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

url=$(git sha-url "$1" 2>/dev/null)
if [ -z "$url" ]; then
  echo "Error: Could not determine commit URL" >&2
  exit 1
fi

open "$url"
