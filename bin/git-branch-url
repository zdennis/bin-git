#!/usr/bin/env bash

VERSION="1.0.0"
SCRIPT_NAME="git-branch-url"

show_help() {
  cat << EOF
$SCRIPT_NAME - Get the GitHub URL for a branch

Usage: $SCRIPT_NAME [options] [branch]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Arguments:
  branch         Branch name (default: current branch)

Description:
  Generates the GitHub URL to view a specific branch.

Examples:
  # URL for current branch
  $SCRIPT_NAME

  # URL for a specific branch
  $SCRIPT_NAME feature/new-feature

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

BRANCH="$1"

if [ -z "$BRANCH" ]; then
  BRANCH=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)
  if [ -z "$BRANCH" ]; then
    echo "Error: Could not determine current branch" >&2
    exit 1
  fi
fi

url=$(git url 2>/dev/null)
if [ -z "$url" ]; then
  echo "Error: Could not determine repository URL" >&2
  exit 1
fi

echo "$url/tree/$BRANCH"
