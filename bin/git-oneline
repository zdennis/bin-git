#!/usr/bin/env sh

VERSION="1.0.0"
SCRIPT_NAME="git-oneline"

show_help() {
  cat << EOF
$SCRIPT_NAME - Show git log in oneline format

Usage: $SCRIPT_NAME [options] [git-log-options]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Description:
  Displays git commit history in a concise one-line-per-commit format.
  This is equivalent to: git log --oneline

Examples:
  # Show recent commits in oneline format
  $SCRIPT_NAME

  # Show last 5 commits
  $SCRIPT_NAME -n 5

  # Show commits for a specific file
  $SCRIPT_NAME -- path/to/file

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

git log --oneline "$@"
