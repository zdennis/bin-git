#!/usr/bin/env bash

VERSION="1.0.0"
SCRIPT_NAME="git-open-url"

show_help() {
  cat << EOF
$SCRIPT_NAME - Open the repository URL in browser

Usage: $SCRIPT_NAME [options]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Description:
  Opens the GitHub repository URL in your default browser.

Examples:
  # Open repo in browser
  $SCRIPT_NAME

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

url=$(git url 2>/dev/null)
if [ -z "$url" ]; then
  echo "Error: Could not determine repository URL" >&2
  exit 1
fi

open "$url"
