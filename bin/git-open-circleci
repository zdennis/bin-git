#!/usr/bin/env bash

VERSION="1.0.0"
SCRIPT_NAME="git-open-circleci"

show_help() {
  cat << EOF
$SCRIPT_NAME - Open CircleCI builds for current branch

Usage: $SCRIPT_NAME [options]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Description:
  Opens the CircleCI build page for the current branch in your default browser.

Examples:
  # Open CircleCI for current branch
  $SCRIPT_NAME

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

repos_name=$(git repos-name 2>/dev/null)
if [ -z "$repos_name" ]; then
  echo "Error: Could not determine repository name" >&2
  exit 1
fi

branch=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)
if [ -z "$branch" ]; then
  echo "Error: Could not determine current branch" >&2
  exit 1
fi

open "https://circleci.com/gh/$repos_name/tree/$branch"
