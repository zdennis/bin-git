#!/usr/bin/env bash

VERSION="1.0.0"
SCRIPT_NAME="git-pushr"

show_help() {
  cat << EOF
$SCRIPT_NAME - Push and set upstream to origin

Usage: $SCRIPT_NAME [options]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Description:
  Pushes the current branch to origin and sets it as the upstream.
  Useful for first-time push of a new branch.

  This is equivalent to: git push --set-upstream origin <current-branch>

Examples:
  # Push current branch and set upstream
  $SCRIPT_NAME

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

current_branch=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)
if [ -z "$current_branch" ]; then
  echo "Error: Not in a git repository or HEAD is detached" >&2
  exit 1
fi

git push --set-upstream origin "$current_branch"
