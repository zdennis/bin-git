#!/usr/bin/env bash

VERSION="1.0.0"
SCRIPT_NAME="git-review"

show_help() {
  cat << EOF
$SCRIPT_NAME - Show commits on remote that aren't on local branch

Usage: $SCRIPT_NAME [options] [git-log-options]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Description:
  Shows commits that are on the remote branch but not on your local branch.
  Useful for reviewing what's been pushed by others.

Examples:
  # Review incoming commits
  $SCRIPT_NAME

  # Review with oneline format
  $SCRIPT_NAME --oneline

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

local_branch=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)
if [ -z "$local_branch" ]; then
  echo "Error: Could not determine current branch" >&2
  exit 1
fi

remote_branch=$(git remote-branch 2>/dev/null)
if [ -z "$remote_branch" ]; then
  echo "Error: Could not determine remote branch" >&2
  exit 1
fi

git log "$local_branch..$remote_branch" "$@"
