#!/usr/bin/env sh

VERSION="1.0.0"
SCRIPT_NAME="git-changed-specs"

show_help() {
  cat << EOF
$SCRIPT_NAME - List changed spec files

Usage: $SCRIPT_NAME [options] [git-changed-files-options]

Options:
  -h, --help     Show this help message
  -v, --version  Show version information

Description:
  Lists spec files (*_spec.rb) that have changed in the current branch
  compared to main. Useful for running only the tests that might be affected
  by your changes.

Examples:
  # List changed spec files
  $SCRIPT_NAME

  # Use with rspec
  rspec \$($SCRIPT_NAME)

Version: $VERSION
EOF
}

case "$1" in
  -h|--help)
    show_help
    exit 0
    ;;
  -v|--version)
    echo "$SCRIPT_NAME version $VERSION"
    exit 0
    ;;
esac

git changed-files "$@" | grep '_spec\.rb$'
